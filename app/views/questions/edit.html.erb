<h1>Edit the Question</h1>

<br/>
<%= form_for(@question) do |f| %>
  <div class="field">
    <%= f.label :title, "Question" %>
    <%= f.text_field :title, minlength: 20 %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, minlength: 50 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <br />
<% end %>

<div id="delete-button"><%= link_to 'Delete', question_path(@question), method: :delete, data: { confirm: "Really?" } %></div><br>
<%= link_to 'Back', questions_path %>
