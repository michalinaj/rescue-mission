<h1>New Question</h1>

<br/>
<%= form_for(@question) do |f| %>
  <div class="field">
    <%= f.label :title, "Question" %>
    <%= f.text_field :title, minlength: 20 %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, minlength: 50 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <br />
<% end %>

<%= link_to 'Back', questions_path %>
